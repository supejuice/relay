    "version": "0.2.0",
    "configurations": [
        {
            "name": "relay",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "relay (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "relay (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        },
        {
            "name": "relay web",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "args": [
                "-d",
                "chrome"
            ],
            "env": {
                "CHROME_EXECUTABLE": "/Applications/Thorium.app/Contents/MacOS/Thorium"
            }
        }
    ]
}